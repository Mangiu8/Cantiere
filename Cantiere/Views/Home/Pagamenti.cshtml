@model IEnumerable<Cantiere.Models.Pagamenti>

@{
    ViewBag.Title = "Pagamenti";
}

<h2>Pagamenti</h2>

<p>
    @Html.ActionLink("Create New", "CreatePagamenti")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdPagamento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PeriodoPagamento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ammontare)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stipendio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Acconto)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IdPagamento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PeriodoPagamento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ammontare)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Stipendio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Acconto)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditPagamenti", new { id=item.IdPagamento  }) |
            @Html.ActionLink("Delete", "DeletePagamenti", new { id=item.IdPagamento  })
        </td>
    </tr>
}

</table>
